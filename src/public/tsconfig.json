{
	"compilerOptions": {
		"composite": true,
		"target": "esnext",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": [
				"../../node_modules/*"
			]
		},
		"sourceMap": false,
		"outDir": "../../public/js",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": [
		"./*.ts"
	]
}