{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"linebreak-style": [
			"warn",
			"windows"
		],
		"quotes": [
			"warn",
			"double"
		],
		"semi": [
			"warn",
			"always"
		]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
